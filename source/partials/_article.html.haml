.article-index
  .article-properties
    - if article.data['logo'].present?
      = image_tag(article.data['logo'], class: 'icon')
    -elsif article.data['source'] =~ /thoughtbot/
      = image_tag('thoughtbot_logo.svg', class: 'icon')
    -else
      = image_tag('solid_white.svg', class: 'icon')

    .timestamp
      = article.date.strftime('%b %e, %Y')

  .blog-title
    - if article.data['source'].blank?
      %h3.title
        = link_to article.title, article.url
      %h4.description
        = link_to article.data['description'], article.url

    - else
      %h3.title
        = link_to article.title, article.data['source']
      %h4.description
        = link_to article.data['description'], article.data['source']
